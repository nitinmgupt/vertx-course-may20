{
  "name": "web-rest",
  "tags": [
    "web",
    "rest"
  ],
  "executions": {
    "java": {
      "directory": "${base}/src/main/java/io/vertx/example/web/rest",
      "command": "vertx run io.vertx.example.web.rest.SimpleREST -cp ${base}/target/classes:."
    },
//    "js": {
//      "directory": "${base}/src/main/js/io/vertx/example/web/rest",
//      "command": "vertx run simple_rest.js -cp ${base}/target/classes:."
//    },
    "groovy": {
      "directory": "${base}/src/main/groovy/io/vertx/example/web/rest",
      "command": "vertx run simple_rest.groovy -cp ${base}/target/classes:."
    },
    "ruby": {
      "directory": "${base}/src/main/ruby/io/vertx/example/web/rest",
      "command": "vertx run simple_rest.rb -cp ${base}/target/classes:."
    }
  },
  "grace-text": "Succeeded in deploying verticle",
  "client-check": "web-rest-check.groovy"

}